{% style %}
  @media (min-width: 1024px) {
    .footer__footer-logo {
      max-width: {{ section.settings.max_width }}px;
      margin: 0 auto;
    }
  }
{% endstyle %}

<div class="footer-logo">
  {%- if request.page_type == 'index' -%}
    <h1 class="footer__heading">
  {%- endif -%}
  {% for block in section.blocks %}
    {% if block.type == 'image' %}
      <a href="{{ routes.root_url }}" class="footer-logo-link link link--text focus-inset">
        {%- if settings.logo != blank -%}
          <div class="header__heading-logo-wrapper footer-block-image {{ block.settings.logo_alignment }}">
            {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
            {% capture widths %}{{ block.settings.logo_width }}{% endcapture %}
            {% capture logo_width %}{{ block.settings.logo_width }}%{% endcapture %}
            {{
              settings.logo
              | image_url: width: 600
              | image_tag:
                class: 'footer__heading-logo motion-reduce',
                widths: widths,
                width: logo_width,
                alt: logo_alt,
                preload: true
            }}
          </div>
        {%- else -%}
          <span class="h2">{{ shop.name }}</span>
        {%- endif -%}
      </a>
    {% endif %}
  {% endfor %}
  {%- if request.page_type == 'index' -%}
    </h1>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.footer-logo.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.footer-logo.settings.full_width.label"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1600,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.width.max_width",
      "default": 1260
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 50
    }

  ],
  "max_blocks": 1,
  "blocks": [
    {
    "type": "image",
    "name": "Logo",
    "settings": [
      {
        "type": "range",
        "id": "logo_width",
        "min": 1,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Image width",
        "default": 100
      },
      {
        "type": "select",
        "id": "logo_alignment",
        "label": "Image alignment all screen",
        "options": [
          {
            "value": "",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }
    ]
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.footer-logo.presets.name",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
